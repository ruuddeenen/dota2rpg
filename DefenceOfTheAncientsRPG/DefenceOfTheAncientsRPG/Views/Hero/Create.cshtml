@model DefenceOfTheAncientsRPG.Models.HeroViewModel.HeroCreateViewModel


<h2>Create</h2>

<h4>HeroCreateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StrengthGain" class="control-label"></label>
                <input asp-for="StrengthGain" type="range" class="form-control" min="1" max="12" step="0.1" value="4" id="Strength" />
                <span id="valueStrength">0</span>
                <span asp-validation-for="StrengthGain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgilityGain" class="control-label"></label>
                <input asp-for="AgilityGain" type="range" class="form-control" min="1" max="12" step="0.1" value="4" id="Agility" />
                <span id="valueAgility">0</span>
                <span asp-validation-for="AgilityGain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntelligenceGain" class="control-label"></label>
                <input asp-for="IntelligenceGain" type="range" class="form-control" min="1" max="12" step="0.1" value="4" id="Intelligence" />
                <span id="valueIntelligence">0</span>
                <span asp-validation-for="IntelligenceGain" class="text-danger"></span>
            </div>
                @Html.DropDownListFor(c => c.SelectedAttribute, Model.AttributeItems)
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    var strength = document.getElementById("Strength");
    var outputStr = document.getElementById("valueStrength");
    outputStr.innerHTML = strength.value;

    strength.oninput = function () {
        outputStr.innerHTML = this.value;
    }

    var agility = document.getElementById("Agility");
    var outputAgi = document.getElementById("valueAgility");
    outputAgi.innerHTML = agility.value;

    agility.oninput = function () {
        outputAgi.innerHTML = this.value;
    }

    var intelligence = document.getElementById("Intelligence");
    var outputInt = document.getElementById("valueIntelligence");
    outputInt.innerHTML = intelligence.value;

    intelligence.oninput = function () {
        outputInt.innerHTML = this.value;
    }
</script>
