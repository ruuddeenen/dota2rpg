            </div>
            <div class="form-group">
                <label asp-for="AgilityGain" class="control-label"></label>
                <input asp-for="AgilityGain" type="number" class="form-control" min="1" max="12" step="0.1" value="4"/>
                <span asp-validation-for="AgilityGain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntelligenceGain" class="control-label"></label>
                <input asp-for="IntelligenceGain" type="number" class="form-control" min="1" max="12" step="0.1" value="4" />
                <span asp-validation-for="IntelligenceGain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

