@model DefenceOfTheAncientsRPG.Models.HeroViewModel.HeroCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>HeroCreateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StrengthGain" class="control-label"></label>
                <input asp-for="StrengthGain" type="number" class="form-control" min="1" max="12" step="0.1" value="4"/>
