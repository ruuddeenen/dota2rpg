@model DefenceOfTheAncientsRPG.Models.AdminViewModel.AdminManageUsersViewModel

@{
    ViewData["Title"] = "ManageUsers";
}

<h1>Overview</h1>
<h2>@Html.ActionLink("Admins", "ManageAdmins") | @Html.ActionLink("Users", "ManageUsers")</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Account ID</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ApplicationUser user in Model.Users)
        {
            <tr>
                <td>
                    <p>@user.Username</p>
                </td>
                <td>
                    <p>@user.Id</p>
                </td>
                <td>
                    <p>
                        @if (Model.IsBlocked(user))
                        {
                            @Html.ActionLink("Unblock", "Unblock", new { user.Id })
                        }
                        else
                        {
                            @Html.ActionLink("Block", "Block", new { user.Id })
                        }
                    </p>
                </td>
                <td>
                    <button class="btn btn-default" onclick="LoadDetails('@user.Id')">Details</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function LoadDetails(UserId) {
        $.ajax({
            url: '/Account/Details',
            data: {
                id: UserId
            },
            cache: false,
            type: "POST",
            dataType: "html",
            success: function (data, textStatus, XMLHttpRequest) {
                $('#Details').html(data);
            }
        });

    }
</script>

<div id="Details">

</div>